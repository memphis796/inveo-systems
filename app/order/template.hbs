<div class="container-fluid">
  <div class="page-header">
    <h1>Order</h1>
  </div>

  <ul class="nav nav-tabs">
    {{#link-to "home" tagName="li" href=false class="nav-list"}}{{#link-to "home" class="nav-list"}}Cancel{{/link-to}}{{/link-to}}
  </ul>

  {{#simple-form startingValues=model onsubmit=(action saveOrder) as |order|}}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">New Order</h2>
      </div>

      <div class="panel-body">
        <fieldset>
          <legend>Product</legend>
          <div class="row">
            <div class="col-md-3">
              <div class="form-group">
                <label for="order-item-id"><span class="label-id">Item ID</span></label>
                {{input type="text" id="order-item-id" class="form-control" value=order.itemId readonly=true}}
              </div>
            </div>

            <div class="col-md-3">
              <div class="form-group">
                <label for="order-item-type"><span class="label-item">Item Type</span></label>
                {{input type="text" id="order-item-type" class="form-control" value=order.itemType readonly=true}}
              </div>
            </div>

            <div class="col-md-3">
              <div class="form-group">
                <label for="order-price-per-unit"><span class="label-price">Price Per Unit</span></label>
                {{input type="text" id="order-price-per-unit" class="form-control" value=order.item.price readonly=true}}
              </div>
            </div>

            <div class="col-md-3">
              <div class="form-group">
                <label for="order-quantity"><span class="label-quantity">Quantity</span></label>
                {{input type="number" id="order-quantity" class="form-control" value=order.quantity}}
              </div>
            </div>
          </div>

          {{! Display data for item type }}
          {{#if (eq order.itemType "laptop") }}
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="order-item-name"><span class="label-color">Laptop Color</span></label>
                  {{input type="text" id="order-item-color" class="form-control" value=order.item.color readonly=true}}
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <label for="order-item-screen-size"><span class="label-screen">Laptop Screen Size</span></label>
                  {{input type="text" id="order-item-screen-size" class="form-control" value=order.item.screenSize readonly=true}}
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="order-item-description"><span class="label-desc">Laptop Description</span></label>
              {{textarea id="order-item-description" class="form-control" value=order.item.description readonly=true}}
            </div>
          {{/if}}
        </fieldset>


        <fieldset>
          <legend>Shipping Address</legend>
          <div class="form-group">
            <label for="order-shipping-address1"><span class="label-add1">Address 1</span></label>
            {{input type="text" id="order-shipping-address1" class="form-control" value=order.shippingAddress1}}
          </div>


          <div class="form-group">
            <label for="order-shipping-address2"><span class="label-add2">Address 2</span></label>
            {{input type="text" id="order-shipping-address2" class="form-control" value=order.shippingAddress2}}
          </div>


          <div class="form-group">
            <label for="order-shipping-state"><span class="label-state">State</span></label>
            {{input type="text" id="order-shipping-state" class="form-control" value=order.shippingState}}
          </div>

          <div class="form-group">
            <label for="order-shipping-city"><span class="label-city">City</span></label>
            {{input type="text" id="order-shipping-city" class="form-control" value=order.shippingCity}}
          </div>

          <div class="form-group">
            <label for="order-shipping-postal-code"><span class="label-zip">Zip</span></label>
            {{input type="text" id="order-shipping-postal-code" class="form-control" value=order.shippingPostalCode}}
          </div>
        </fieldset>


        <fieldset>
          <legend>Billing Address</legend>
          <div class="form-group">
            {{input type="checkbox" id="order-shipping-is-billing" checked=order.shippingIsBilling}}
            <label for="order-shipping-is-billing">Use shipping address for billing address</label>
          </div>

          {{#unless order.shippingIsBilling}}
            <div class="form-group">
              <label for="order-billing-address1"><span class="label-add1">Address 1</span></label>
              {{input type="text" id="order-billing-address1" class="form-control" value=order.billingAddress2 disabled=order.shippingIsBilling}}
            </div>

            <div class="form-group">
              <label for="order-billing-address2"><span class="label-add2">Address 2</span></label>
              {{input type="text" id="order-billing-address2" class="form-control" value=order.billingAddress2 disabled=order.shippingIsBilling}}
            </div>

            <div class="form-group">
              <label for="order-billing-state"><span class="label-state">State</span></label>
              {{input type="text" id="order-billing-state" class="form-control" value=order.billingState disabled=order.shippingIsBilling}}
            </div>

            <div class="form-group">
              <label for="order-billing-city"><span class="label-city">City</span></label>
              {{input type="text" id="order-billing-city" class="form-control" value=order.billingCity disabled=order.shippingIsBilling}}
            </div>

            <div class="form-group">
              <label for="order-billing-postal-code"><span class="label-zip">Zip</span></label>
              {{input type="text" id="order-billing-postal-code" class="form-control" value=order.billingPostalCode disabled=order.shippingIsBilling}}
            </div>
          {{/unless}}
        </fieldset>


        <fieldset>
          <legend>Payment</legend>
          <div class="form-group">
            <label for="order-payment-credit-card-number"><span class="label-credit">Credit Card Number</span></label>
            {{input type="text" id="order-payment-credit-card-number" class="form-control" value=order.paymentCreditCardNumber placeholder="Card Number"}}
          </div>

          <div class="form-group">
            <label for="order-payment-credit-card-expiration"><span class="label-expiration">Credit Card Expiration</span></label>
            {{input type="text" id="order-payment-credit-card-expiration" class="form-control" value=order.paymentCreditCardExpiration placeholder="Expiration date"}}
          </div>

          <div class="form-group">
            <label for="order-payment-credit-card-name"><span class="label-name-on__credit">Name on Credit Card</span></label>
            {{input type="text" id="order-payment-credit-card-name" class="form-control" value=order.paymentCreditCardName}}
          </div>

          <div class="form-group">
            <label for="order-payment-credit-card-cvv"><span class="label-cvv">CVV</span></label>
            {{input type="text" id="order-payment-credit-card-cvv" class="form-control" value=order.paymentCreditCardCvv}}
          </div>
        </fieldset>

        <div class="form-group">
          {{#link-to "home" class="btn btn-default" class="nav-list"}}Cancel{{/link-to}}
          <button class="btn btn-primary select-button">Place your order</button>
        </div>
      </div>
    </div>
  {{/simple-form}}

  {{outlet}}
</div>
